// File: tsconfig.json (relative to project root)
{
  "compilerOptions": {
    // Targets modern Node (v18+)
    "target": "ES2020",

    // CommonJS for ts-node simplicity
    "module": "CommonJS",
    "moduleResolution": "Node",

    // Interop so `import axios from "axios"` works cleanly
    "esModuleInterop": true,

    // Sensible TS defaults
    "strict": true,
    "skipLibCheck": true,

    // Project layout
    "rootDir": "src",
    "outDir": "dist",

    // Handy but optional
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
